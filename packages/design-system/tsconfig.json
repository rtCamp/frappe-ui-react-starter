{
	"extends": "@react-skeleton/config-typescript/react-library.json",
	"compilerOptions": {
		"outDir": "./dist",
		"lib": ["dom", "ES2015"],
		"sourceMap": true,
		"noEmit": false,
		"allowImportingTsExtensions": false,
		/* Path aliasing */
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["src", "storybook.d.ts"],
	"exclude": ["dist", "build", "node_modules"]
}
