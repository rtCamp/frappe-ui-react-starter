{
	"name": "@frappe-ui-react-starter/design-system",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"sideEffects": [
		"**/*.css"
	],
	"files": [
		"dist"
	],
	"exports": {
		".": {
			"import": "./src/index.ts",
			"require": "./src/index.ts"
		},
		"./styles.css": "./src/styles.css",
		"./*": {
			"import": "./src/components/*/index.tsx",
			"require": "./src/components/*/index.tsx"
		}
	},
	"scripts": {
		"build:styles": "tailwindcss -i ./src/styles.css -o ./dist/index.css",
		"build:components": "tsc",
		"check-types": "tsc --noEmit",
		"dev:styles": "tailwindcss -i ./src/styles.css -o ./dist/index.css --watch",
		"dev:components": "tsc --watch",
		"dev": "concurrently pnpm run \"dev:styles\" \"pnpm run dev:components\"",
		"build": "npm run build:styles & npm run build:components",
		"lint": "eslint src --max-warnings 0",
		"format": "prettier . --write"
	},
	"peerDependencies": {
		"react": "^19"
	},
	"devDependencies": {
		"@frappe-ui-react-starter/shared-config": "workspace:*",
		"@tailwindcss/cli": "^4.1.5",
		"@types/react": "^19.1.0",
		"concurrently": "^9.2.1",
		"eslint": "^9.33.0",
		"prettier": "^3.6.2",
		"tailwindcss": "^4.1.5",
		"typescript": "5.9.2"
	},
	"dependencies": {
		"@rtcamp/frappe-ui-react": "1.0.0-beta.1"
	}
}
