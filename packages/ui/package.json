{
	"name": "@react-skeleton/ui",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"sideEffects": [
		"**/*.css"
	],
	"files": [
		"dist"
	],
	"exports": {
		"./styles.css": "./dist/index.css",
		"./*": "./dist/components/ui/*.js"
	},
	"scripts": {
		"build:styles": "tailwindcss -i ./src/styles.css -o ./dist/index.css",
		"build:components": "tsc",
		"check-types": "tsc --noEmit",
		"dev:styles": "tailwindcss -i ./src/styles.css -o ./dist/index.css --watch",
		"dev:components": "tsc --watch",
		"dev": "concurrently pnpm run \"dev:styles\" \"pnpm run dev:components\"",
		"build": "npm run build:styles & npm run build:components",
		"lint": "eslint src --max-warnings 0",
		"format": "prettier . --write"
	},
	"dependencies": {
		"@radix-ui/react-slot": "^1.2.3",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"tailwind-merge": "^3.3.1"
	},
	"peerDependencies": {
		"react": "^19"
	},
	"devDependencies": {
		"@react-skeleton/config-eslint": "workspace:*",
		"@react-skeleton/config-prettier": "workspace:*",
		"@react-skeleton/config-tailwind": "workspace:*",
		"@react-skeleton/config-typescript": "workspace:*",
		"@tailwindcss/cli": "^4.1.5",
		"@types/react": "^19.1.0",
		"concurrently": "^9.2.1",
		"eslint": "^9.33.0",
		"prettier": "^3.6.2",
		"tailwindcss": "^4.1.5",
		"typescript": "5.9.2"
	}
}
