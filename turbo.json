{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "lint": {
      "dependsOn": ["^lint"]
    },
    "format": {
      "dependsOn": ["^format"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "build": {
      "dependsOn": ["check-types", "^build"],
      "outputs": ["dist/**"]
    },
    "preview-storybook": {
      "dependsOn": ["@react-skeleton/ui#build","docs-ui#build"],
      "outputs": [".storybook-static/**"],
      "cache": false,
      "persistent": true
    },
    "storybook": {
      "with": ["dev"],
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^test"],
      "outputs": []
    }
  }
}
